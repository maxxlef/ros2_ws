<?xml version="1.0"?>
<robot name="myfirst">
    <link name="base_link">
        <visual>
            <geometry>
                <box size = "0.18 0.13 0.03" />
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 0.5"/>
            </material>
        </visual>
    </link>

  <link name="Left_track_link">
    <visual>
      <geometry>
         <box size = "0.26 0.055 0.06" />
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="Left_track" type="revolute">
    <limit effort = "10" lower = "-0.22" upper = "1.15" velocity = "10" />
    <axis xyz="-1 0 0"/>
    <parent link="base_link"/>
    <child link="Left_track_link"/>
    <origin rpy="0 0 0" xyz="0 0.09 0"/>
  </joint>

  <link name="Right_track_link">
    <visual>
      <geometry>
         <box size = "0.26 0.055 0.06" />
      </geometry>
      <material name="blue"/>
    </visual>
  </link>


  <joint name="Right_track" type="revolute">
    <limit effort = "10" lower = "-0.22" upper = "1.15" velocity = "10" />
    <axis xyz="1 0 0"/>
    <parent link="base_link"/>
    <child link="Right_track_link"/>
    <origin rpy="0 0 0" xyz="0 -0.09 0"/>
  </joint>

  <link name="base_video_link">
    <visual>
      <geometry>
         <box size = "0.01 0.02 0.01" />
      </geometry>
            <material name="yellow">
                <color rgba="1 1 0 0"/>
            </material>
    </visual>
  </link>

  <joint name="base_pan_tilt" type="fixed">
    <axis xyz="1 0 0"/>
    <parent link="base_link"/>
    <child link="base_video_link"/>
    <origin rpy="0 0 0" xyz="0.09 0 0.015"/>
  </joint>

  <link name="Pan_link">
    <visual>
      <geometry>
         <box size = "0.02 0.02 0.01" />
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="Pan" type="revolute">
    <limit effort = "10" lower = "-1.57" upper = "1.57" velocity = "10" />
    <axis xyz="0 0 -1"/>
    <parent link="base_video_link"/>
    <child link="Pan_link"/>
    <origin rpy="0 0 0" xyz="0.01 0 0.01"/>
  </joint>

  <link name="Tilt_link">
    <visual>
      <geometry>
         <box size = "0.02 0.02 0.01" />
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="Tilt" type="revolute">
    <limit effort = "10" lower = "-1.57" upper = "1.57" velocity = "10" />
    <axis xyz="0 -1 0"/>
    <parent link="Pan_link"/>
    <child link="Tilt_link"/>
    <origin rpy="0 0 0" xyz="0.01 0 0.01"/>
  </joint>


  <link name="Left_wheel">
    <visual>
      <geometry>
        <cylinder length=".01" radius="0.0408"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="Left" type="continuous">
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="Left_wheel"/>
    <origin rpy="1.57075 0 0" xyz="0 0.069 -0.085"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>
  
  <link name="Right_wheel">
    <visual>
      <geometry>
        <cylinder length=".01" radius="0.0408"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="Right" type="continuous">
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="Right_wheel"/>
    <origin rpy="1.57075 0 0" xyz="0 -0.069 -0.085"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>


</robot>
